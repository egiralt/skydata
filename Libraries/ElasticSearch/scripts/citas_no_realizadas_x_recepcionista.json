{
   "query": {
      "bool": {
         "must": [
            {
               "match": { "estado": "6" }
            },
            {
               "match": { "recepcionista_codigo": "{{recepcionista_codigo}}" }
            },
            {
                "range": {
                   "fecha_cita": {
                      "from": "{{#yesterday, d/m/Y}}",
                      "to": "{{#today, d/m/Y}}"
                   }
                }
            }            
         ]
      }
   }
}