<div class="row">
	<div class="col-md-12">
		<!-- Advanced Tables -->
		<div class="panel panel-default">
			<div class="panel-heading">Salidas del día</div>
			<div class="panel-body">
				<div class="table-responsive">
					<table class="table table-striped table-bordered table-hover">
						<thead>
							<tr>
								<th>Referencia</th>
								<th>Hora</th>
								<th>Descripción</th>
								<th>Contacto</th>
								<th>Vehículo</th>
							</tr>
						</thead>
						<tbody>
							{% if entregas|length > 0 %} 
								{% for entrega in entregas %}
								<tr>
									<td>{{ entrega.or_item.referencia }}</td>
									<td><span style='font-size: 1.5em'><strong>{{ entrega.fecha_final|date('H:m') }}</strong></span></td>
									<td><description text='{{ entrega.cita_item.nombre|raw }}'></description></td>
									<td>{{ entrega.cita_item.nombre_contacto }}</td>
									<td><vehinfo bastidor='{{ entrega.vehiculo_item.bastidor }}' matricula='{{ entrega.vehiculo_item.matricula }}'></vehinfo></td>
								</tr>
								{% endfor %} 
							{% else %}
							<tr>
								<td colspan='4'><strong>No hay entregas previstas para hoy</strong><td>
							</tr>
							{% endif %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>
